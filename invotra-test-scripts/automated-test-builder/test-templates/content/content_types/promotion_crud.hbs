---
title: Promotion CRUD
type: Promotion
typeURL: promotion
---

{{#content "Edit Node"}}
	<!--Add node-->
	<tr>
		<td>open</td>
		<td>/node/add/{{typeURL}}</td>
		<td></td>
	</tr>
	{{> enter_title_body}}
	<tr>
		<td>type</td>
		<td>id=edit-field-link-und-0-url</td>
		<td>${relatedExternalLinksURL}</td>
	</tr>
	<!--'Organisational' Content Options-->
	{{!-- missing sitesection, security, owner, links section, general topic, so splitting the steps out individually 
		and setting slow speed here. It would normally be set in meta_organisational.hbs --}}
	<tr>
		<td>setSpeed</td>
		<td>${slowSpeed}</td>
		<td></td>
	</tr>
	{{> meta_organisational_primary_category}}
	<tr>
		<td>setSpeed</td>
		<td>0</td>
		<td></td>
	</tr>
	<!--Change to 'Tags' Content Options-->
	<tr>
		<td>click</td>
		<td>link=Tags</td>
		<td></td>
	</tr>
	{{!-- No topic dropdown --}}
	<!--Ignoring Projects as unnecessarily complex-->
	{{> meta_tags_country}}
	{{> meta_targeting}}
	{{> meta_publishing}}
	{{> publish_node}}
{{/content}}

{{#content "Verify Node"}}
	<!--Verify node-->
	{{> verify_view_title_body}}
	<tr>
		<td>verifyText</td>
		<td>link=${relatedExternalLinksURL}</td>
		<td>${relatedExternalLinksURL}</td>
	</tr>
{{/content}}

{{#content "Update Node"}}
	<!--Update the Node-->
	<tr>
		<td>clickAndWait</td>
		<td>link=Edit</td>
		<td></td>
	</tr>
	{{> verify_edit_title_body_update}}
	{{> enter_title_body_update}}
	<tr>
		<td>verifyValue</td>
		<td>id=edit-field-link-und-0-url</td>
		<td>${relatedExternalLinksURL}</td>
	</tr>
	<tr>
		<td>type</td>
		<td>id=edit-field-link-und-0-url</td>
		<td>${relatedExternalLinksURLUpdate}</td>
	</tr>
	<!--Update 'Organisational' Content Options-->
	{{!-- missing sitesection, security, owner, links section, general topic, so splitting the steps out individually --}}
	{{> meta_organisational_primary_category_update}}
	<!--Change to 'Tags' Content Options-->
	<tr>
		<td>click</td>
		<td>link=Tags</td>
		<td></td>
	</tr>
	{{!-- No topic dropdown --}}
	<!--Ignoring Projects as unnecessarily complex-->
	{{> meta_tags_country_update}}
	{{> meta_targeting_update}}
	{{> meta_publishing_update}}
	{{#if userCantDelete}}
		{{> verify_cant_delete}}
	{{/if}}
	{{> publish_node}}
{{/content}}

{{#content "Verify Updated Node"}}
	<!--Verify node has been updated-->
	<tr>
		<td>open</td>
		<td>/{{typeURL}}/${titleUpdate}</td>
		<td></td>
	</tr>
	{{> verify_view_title_body_update}}
	<tr>
		<td>verifyText</td>
		<td>link=${relatedExternalLinksURLUpdate}</td>
		<td>${relatedExternalLinksURLUpdate}</td>
	</tr>
{{/content}}

{{#content "Delete Node"}}
	{{> delete_node}}
{{/content}}