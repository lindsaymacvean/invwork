---
title: List CRUD
type: List
typeURL: list
---

{{#content "Edit Node"}}
	<!--Add node-->
	<tr>
		<td>open</td>
		<td>/node/add/{{type}}</td>
		<td></td>
	</tr>
	{{> enter_title_body}}
	<tr>
		<td>verifySelectedLabel</td>
		<td>id=edit-field-list-collection-und-0-field-list-type-und</td>
		<td>Content</td>
	</tr>
	<tr>
		<td>setSpeed</td>
		<td>${slowSpeed}</td>
		<td></td>
	</tr>
	<tr>
		<td>type</td>
		<td>id=edit-field-list-collection-und-0-field-list-und-0-target-id</td>
		<td></td>
	</tr>
	<tr>
		<td>sendKeys</td>
		<td>id=edit-field-list-collection-und-0-field-list-und-0-target-id</td>
		<td>${relatedContent}</td>
	</tr>
	<tr>
		<td>waitForElementPresent</td>
		<td>css=div#autocomplete</td>
		<td></td>
	</tr>
	<tr>
		<td>keyDown</td>
		<td>id=edit-field-list-collection-und-0-field-list-und-0-target-id</td>
		<td>\40</td>
	</tr>

	<tr>
		<td>click</td>
		<td>id=edit-submit</td>
		<td></td>
	</tr>
	<tr>
		<td>setSpeed</td>
		<td>0</td>
		<td></td>
	</tr>
	{{> content_options_without_security_owner_links_topic}}
	{{> publish_node}}
{{/content}}

{{#content "Verify Node"}}
	<!--Verify node-->
	{{> verify_view_title_body}}
	<tr>
		<td>verifyText</td>
		<td>link=${relatedContent}</td>
		<td>${relatedContent}</td>
	</tr>
{{/content}}

{{#content "Update Node"}}
	<!--Update the Node-->
	<tr>
		<td>clickAndWait</td>
		<td>link=Edit</td>
		<td></td>
	</tr>
	{{> verify_edit_title_body_update}}
	{{> enter_title_body_update}}
	<tr>
		<td>verifySelectedLabel</td>
		<td>id=edit-field-list-collection-und-0-field-list-type-und</td>
		<td>Content</td>
	</tr>
	<tr>
		<td>setSpeed</td>
		<td>${slowSpeed}</td>
		<td></td>
	</tr>
	<tr>
		<td>type</td>
		<td>id=edit-field-list-collection-und-0-field-list-und-0-target-id</td>
		<td></td>
	</tr>
	<tr>
		<td>sendKeys</td>
		<td>id=edit-field-list-collection-und-0-field-list-und-0-target-id</td>
		<td>${relatedContentUpdate}</td>
	</tr>
	<tr>
		<td>waitForElementPresent</td>
		<td>css=div#autocomplete</td>
		<td></td>
	</tr>
	<tr>
		<td>keyDown</td>
		<td>id=edit-field-list-collection-und-0-field-list-und-0-target-id</td>
		<td>\40</td>
	</tr>

	<tr>
		<td>click</td>
		<td>id=edit-submit</td>
		<td></td>
	</tr>
	<tr>
		<td>setSpeed</td>
		<td>0</td>
		<td></td>
	</tr>
	{{> content_options_without_security_owner_links_topic_update}}
	{{#if userCantDelete}}
		{{> verify_cant_delete}}
	{{/if}}
	{{> publish_node}}
{{/content}}

{{#content "Verify Updated Node"}}
	<!--Verify node has been updated-->
	<tr>
		<td>open</td>
		<td>/{{typeURL}}/${titleUpdate}</td>
		<td></td>
	</tr>
	{{> verify_view_title_body_update}}
	<tr>
		<td>verifyText</td>
		<td>link=${relatedContentUpdate}</td>
		<td>${relatedContentUpdate}</td>
	</tr>
{{/content}}

{{#content "Delete Node"}}
	{{> delete_node}}
{{/content}}